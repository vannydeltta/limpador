{
  "name": "CleaningRequest",
  "type": "object",
  "properties": {
    "client_email": {
      "type": "string",
      "description": "Email do contratante"
    },
    "cleaner_email": {
      "type": "string",
      "description": "Email da faxineira atribu\u00edda"
    },
    "status": {
      "type": "string",
      "enum": [
        "pending",
        "accepted",
        "in_progress",
        "completed",
        "cancelled"
      ],
      "default": "pending"
    },
    "service_type": {
      "type": "string",
      "enum": [
        "padrao",
        "com_organizacao",
        "pos_obra"
      ],
      "default": "padrao",
      "description": "Tipo de servi\u00e7o"
    },
    "frequency": {
      "type": "string",
      "enum": [
        "unica",
        "semanal",
        "mensal"
      ],
      "default": "unica",
      "description": "Frequ\u00eancia do servi\u00e7o"
    },
    "region": {
      "type": "string",
      "description": "Regi\u00e3o do servi\u00e7o no RS"
    },
    "city": {
      "type": "string",
      "description": "Cidade do servi\u00e7o"
    },
    "number_of_cleaners": {
      "type": "number",
      "default": 1,
      "description": "Quantidade de faxineiras solicitadas"
    },
    "hours": {
      "type": "number",
      "description": "Quantidade de horas (1-8)"
    },
    "include_products": {
      "type": "boolean",
      "default": false
    },
    "base_price": {
      "type": "number",
      "description": "Pre\u00e7o base do servi\u00e7o"
    },
    "agency_fee": {
      "type": "number",
      "description": "Taxa da ag\u00eancia (40%)"
    },
    "total_price": {
      "type": "number",
      "description": "Pre\u00e7o total com taxa"
    },
    "cleaner_earnings": {
      "type": "number",
      "description": "Valor que a faxineira recebe"
    },
    "fine_amount": {
      "type": "number",
      "default": 0,
      "description": "Valor de multas aplicadas"
    },
    "address": {
      "type": "string"
    },
    "address_complement": {
      "type": "string"
    },
    "scheduled_date": {
      "type": "string",
      "format": "date"
    },
    "scheduled_time": {
      "type": "string"
    },
    "notes": {
      "type": "string"
    },
    "rating": {
      "type": "number",
      "description": "Avalia\u00e7\u00e3o de 1-5 estrelas"
    },
    "review": {
      "type": "string"
    },
    "payment_status": {
      "type": "string",
      "enum": [
        "pending",
        "paid",
        "refunded"
      ],
      "default": "pending"
    },
    "payment_method": {
      "type": "string",
      "enum": [
        "pix",
        "credit_card",
        "debit_card",
        "cash"
      ]
    },
    "automatic_payment_triggered": {
      "type": "boolean",
      "default": false,
      "description": "Se o pagamento autom\u00e1tico j\u00e1 foi disparado"
    },
    "cancellation_date": {
      "type": "string",
      "format": "date-time",
      "description": "Data de cancelamento"
    }
  },
  "required": [
    "client_email",
    "hours",
    "address",
    "scheduled_date",
    "scheduled_time"
  ]
}